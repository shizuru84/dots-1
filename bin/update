#! /bin/sh
#
# Update - Updates repo to local setup

# Functions
PASS() {
    echo -e '\e[32m[âœ“]'"$@"'\e[0m'
}

FAIL() {
    echo -e '\e[31m[X]'"$@"'\e[0m'
}

clone () {
    if [ $1 = "Wallpapers" ]; then
        cp ~/Wallpapers/* ~/.dotfiles/wallpaper/ &> /dev/null
        case $? in
            0)  PASS "Wallpapers Updated"
                ;;
            *)  FAIL "Wallpapers Failed"
                ;;
        esac
    elif [ $1 = "Scripts" ]; then
        cp ~/.scripts/* ~/.dotfiles/bin &> /dev/null
        case $? in 
            0)  PASS "Bin Updated"
                ;;
            *)  FAIL "Bin Failed"
                ;;
        esac
    fi
}

# Header
echo -e '\e[34mUpdating Dotfiles:\e[0m'

# Checks
clone "Wallpapers"
clone "Scripts"
