#! /bin/sh
#
# Update - Updates repo to local setup

# Functions
PASS() {
    echo -e '\e[32m '"$@"'\e[0m'
}

FAIL() {
    echo -e '\e[31m '"$@"'\e[0m'
}

updateRepo () {
    if [ $1 = "Wallpapers" ]; then
        cp ~/Wallpapers/* ~/.dotfiles/wallpaper &> /dev/null
        case $? in
            0)  PASS "Wallpapers"
                ;;
            *)  FAIL "Wallpapers"
                ;;
        esac
    elif [ $1 = "Scripts" ]; then
        cp ~/.scripts/* ~/.dotfiles/bin &> /dev/null
        case $? in 
            0)  PASS "Bin"
                ;;
            *)  FAIL "Bin"
                ;;
        esac
    elif [ $1 = "Dunst" ]; then
        cp ~/.config/dunst/dunstrc ~/.dotfiles/dunst &> /dev/null
        case $? in
            0)  PASS "Dunst"
                ;;
            *)  FAIL "Dunst"
                ;;
        esac
    elif [ $1 = "Terminal" ]; then
        cp ~/.Xresources ~/.dotfiles/urxvt &> /dev/null
        case $? in 
            0)  PASS "Rxvt-Unicode"
                ;;
            *)  FAIL "Rxvt-Unicode"
                ;;
        esac
    elif [ $1 = "OBThemes" ]; then
        cp -r ~/.themes/* ~/.dotfiles/obthemes &> /dev/null
        case $? in 
            0)  PASS "OBThemes"
                ;;
            *)  FAIL "OBThemes"
                ;;
        esac
    elif [ $1 = "Openbox" ]; then
        cp ~/.config/openbox/* ~/.dotfiles/openbox &>/dev/null
        case $? in
            0)  PASS "Openbox"
                ;;
            *)  FAIL "Openbox"
                ;;
        esac
    elif [ $1 = "Compton" ]; then
        cp ~/.config/compton.conf ~/.dotfiles/compton &>/dev/null
        case $? in
            0)  PASS "Compton"
                ;;
            *)  FAIL "Compton"
                ;;
        esac
    elif [ $1 = "Mpd" ]; then
        cp ~/.mpd/mpd.conf ~/.dotfiles/mpd &>/dev/null
        case $? in
            0)  PASS "Mpd"
                ;;
            *)  FAIL "Mpd"
                ;;
        esac
    elif [ $1 = "Ncmpcpp" ]; then
        cp ~/.ncmpcpp/config ~/.dotfiles/ncmpcpp &>/dev/null
        case $? in 
            0)  PASS "Ncmpcpp"
                ;;
            *)  PASS "Ncmpcpp"
                ;;
        esac
    fi
}

# Header
clear
echo -e '\e[34mUpdating Dotfiles:\e[0m'
echo ""

# Checks
updateRepo "Wallpapers"
sleep $(($RANDOM % 10))
updateRepo "Scripts"
sleep $(($RANDOM % 10))
updateRepo "Dunst"
sleep $(($RANDOM % 10))
updateRepo "Terminal"
sleep $(($RANDOM % 10))
updateRepo "OBThemes"
sleep $(($RANDOM % 10))
updateRepo "Openbox"
sleep $(($RANDOM % 10))
updateRepo "Compton"
sleep $(($RANDOM % 10))
updateRepo "Mpd"
sleep $(($RANDOM % 10))
updateRepo "Ncmpcpp"
