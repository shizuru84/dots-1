#! /bin/sh
#
# Update - Updates repo to local setup

# Functions
PASS() {
    echo -e '\e[32m '"$@"'\e[0m'
}

FAIL() {
    echo -e '\e[31m '"$@"'\e[0m'
}

updateRepo () {
    if [ $1 = "Wallpapers" ]; then
        cp ~/Wallpapers/* ~/.dotfiles/wallpaper &> /dev/null
        case $? in
            0)  PASS "Wallpapers"
                ;;
            *)  FAIL "Wallpapers"
                ;;
        esac
    elif [ $1 = "Scripts" ]; then
        cp ~/.scripts/* ~/.dotfiles/bin &> /dev/null
        case $? in 
            0)  PASS "Bin"
                ;;
            *)  FAIL "Bin"
                ;;
        esac
    elif [ $1 = "Dunst" ]; then
        cp ~/.config/dunst/dunstrc ~/.dotfiles/dunst &> /dev/null
        case $? in
            0)  PASS "Dunst"
                ;;
            *)  FAIL "Dunst"
                ;;
        esac
    elif [ $1 = "Terminal" ]; then
        cp ~/.Xresources ~/.dotfiles/urxvt &> /dev/null
        case $? in 
            0)  PASS "Rxvt-Unicode"
                ;;
            *)  FAIL "Rxvt-Unicode"
                ;;
        esac
    fi
}

# Header
clear
echo -e '\e[34mUpdating Dotfiles:\e[0m'
echo ""

# Checks
updateRepo "Wallpapers"
sleep $(($RANDOM % 10))
updateRepo "Scripts"
sleep $(($RANDOM % 10))
updateRepo "Dunst"
sleep $(($RANDOM % 10))
updateRepo "Terminal"
